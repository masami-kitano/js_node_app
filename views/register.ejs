<%- include('header'); %>
<main>
    <div class="form-wrapper">
        <form action="#" method="post" class="form">
            <div class="form__title">Register</div>
            <div class="form__group">
                <div class="form__item">
                    <label>Name</label>
                    <input type="text" name="name" class="text-field" required>
                </div>
                <div class="form__item">
                    <label>Mail</label>
                    <input type="email" name="email" class="text-field" required>
                </div>
                <div class="form__item">
                    <label>Password</label>
                    <input type="password" name="password" id="password" class="text-field" minlength="8" required>
                </div>
                <div class="form__item">
                    <label>Confirm Password</label>
                    <input type="password" name="confirm" id="confirm" class="text-field" oninput="checkPassword(this)" required>
                </div>
                <div class="form__item">
                    <label></label>
                    <input type="submit" value="Register">
                </div>
            </div>
        <form>
    </div>
</main>
<script src="javascripts/checkPassword.js"></script>
</body>

</html>